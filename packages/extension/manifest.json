{
  "manifest_version": 3,
  "name": "Linguastik Lens",
  "version": "1.0.0",
  "description": "Search in your language. Discover the world's knowledge.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Linguastik Lens",
    "default_popup": "popup.html"
  }
}